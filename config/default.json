{
  "app": {
    "fileRotationOptions": {
      "errorOptions": {
        "datePattern": "YYYY-MM-DD",
        "dirname": "logs",
        "filename": "error-%DATE%.log",
        "zippedArchive": true,
        "auditFile": "./audits/error-audit.json",
        "maxSize": "20m",
        "maxFiles": "14d"
      },
      "httpOptions": {
        "datePattern": "YYYY-MM-DD",
        "dirname": "logs",
        "filename": "http-%DATE%.log",
        "zippedArchive": true,
        "auditFile": "./audits/http-audit.json",
        "maxSize": "20m",
        "maxFiles": "14d"
      },
      "infoOptions": {
        "datePattern": "YYYY-MM-DD",
        "dirname": "logs",
        "filename": "info-%DATE%.log",
        "zippedArchive": true,
        "auditFile": "./audits/info-audit.json",
        "maxSize": "20m",
        "maxFiles": "14d"
      }
    },
    "mongoTransportOptions": {
      "errorOptions": {
        "level": "error",
        "db": "mongodb+srv://anilpulkaram:anilpulkaram@cluster0.t50a7xa.mongodb.net/",
        "dbName": "PokemonDB",
        "collection": "error-logs",
        "options": {
          "useNewUrlParser": true,
          "useUnifiedTopology": true
        }
      },
      "httpOptions": {
        "level": "http",
        "db": "mongodb+srv://anilpulkaram:anilpulkaram@cluster0.t50a7xa.mongodb.net/",
        "dbName": "PokemonDB",
        "collection": "http-logs",
        "options": {
          "useNewUrlParser": true,
          "useUnifiedTopology": true
        }
      }
    }
  }
}
